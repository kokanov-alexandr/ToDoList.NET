@model List<Note>
@{
    ViewData["Title"] = "Список заказов";
}

<h1>@ViewData["Title"]</h1>

<div>
    @if (Model.Count == 0)
    {
        <h3>У вас пока нет заказов!</h3>
    }
    else {
        <div>
            @foreach (Note note in Model)
            {
                <form asp-action="IndexDelete" method="post">
                    <p>Id: @note.Id</p>
                    <p>Заголовок: @note.Title</p>
                    <p>Клиент: @note.Client</p>
                    <button type="submit">Удалить</button>
                    @Html.Hidden("Id", note.Id)
                    <br />
                </form>
               
            }
        </div>
    }
    
</div>
